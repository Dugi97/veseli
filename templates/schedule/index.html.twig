{% extends 'base.html.twig' %}

{% block title %}Hello ScheduleController!{% endblock %}

{% block body %}
    <form method="post" action="/">

        <label>Name</label> <br>
        <input type="text" name="username"> <br>

        <label>Email</label> <br>
        <input type="text" name="email"> <br>

        <label>Phone number</label> <br>
        <input type="text" name="phone"> <br>

        <label>Boat</label> <br>
        <select name="boat">

            {% for boat in boats %}

                <option value="{{ boat.type }}">{{ boat.type }}</option>

            {% endfor %}
        </select> <br>

        <label>Lunch</label> <br>
        <select name="lunch">

            {% for lunch in lunches %}

                <option value="{{ lunch.type }}">{{ lunch.type }}</option>

            {% endfor %}
        </select> <br>

        <label>Periods</label> <br>

        {% for timeSlot in timeSlots %}

            {% if ( timeSlot.schedule|length < timeSlot.capacity ) %}

            <input type="radio" name="timeSlot" value="{{ timeSlot.period }}">
            <label>{{ timeSlot.period }} ({{ timeSlot.schedule|length }}/{{ timeSlot.capacity }})</label>

            {% else %}

                <input type="radio" name="timeSlot" value="{{ timeSlot.period }}" disabled >
                <label>{{ timeSlot.period }} ({{ "full" }})</label>

            {% endif %}

        {% endfor %} <br>

        <input type="submit" name="send" name="send">
    </form>
{% endblock %}

